{
  "scripts": {
    "build": "webpack",
    "webpack-defaults": "webpack-defaults",
    "build:watch": "yarn build --watch",
    "build:watch:dev": "yarn build:watch --env.env=dev",
    "build:watch:prod": "yarn build:watch --env.env=prod",
    "build:dev": "yarn build --env.env=dev",
    "build:dev:bundlebuddy": "yarn build:dev --env.addons=bundlebuddy",
    "build:dev:bundleanalyze": "yarn build:dev --env.addons=bundleanalyze",
    "build:dev:addons": "yarn build:dev --env.addons=bundlebuddy --env.addons=bundleanalyze",
    "build:prod": "yarn build --env.env=prod",
    "build:prod:bundlebuddy": "yarn build --env.addons=bundlebuddy",
    "build:prod:bundleanalyze": "yarn build --env.addons=bundleanalyze",
    "build:prod:addons": "yarn build:prod --env.addons=bundlebuddy --env.addons= bundleanalyze",
    "build:first": "yarn build:dev --env.addons=firstplugin",
    "debug": "node --inspect --debug-brk ./node_modules/webpack/bin/webpack.js",
    "debug:prod": "yarn debug --env.env=prod"
  },
  "devDependencies": {
    "bundle-buddy-webpack-plugin": "^0.3.0",
    "html-webpack-plugin": "^2.30.1",
    "webpack": "^3.10.0",
    "webpack-bundle-analyzer": "^2.9.1",
    "webpack-defaults": "^1.6.0",
    "webpack-dev-server": "^2.9.7",
    "webpack-merge": "^4.1.1"
  }
}
